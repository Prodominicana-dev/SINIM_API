{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../public/**/*",
        "outDir": "dist/public",
        "watchAssets": true
      },
      {
        "include": "mail/templates/**/*",
        "outDir": "dist/src/",
        "watchAssets": true
      }
    ]
  }
}
