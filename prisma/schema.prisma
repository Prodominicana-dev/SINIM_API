// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  lastname  String
  email     String   @unique
  role      String 
  status    String
  password  String
}

model Ramis{
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  sector  String
  product product
  country Country @relation(fields: [countryId], references: [id])
  countryId String @db.ObjectId
}

type product{
  name String
  description String
  subHeading String
}

model Country{
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  name String
  flag String
  ramis Ramis[]  // Relación opuesta a través del campo `country`

}
